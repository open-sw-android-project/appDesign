<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_purple"
            android:text="출석현황"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/subjectName"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_purple"
            android:gravity="center"
            android:textColor="@color/l_gray"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="출석    /    지각    /    결석"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/textview"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/attendNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_toLeftOf="@+id/lateNum"
                android:gravity="center"
                android:textColor="@color/purple_200"
                android:textSize="20dp"
                android:text="0"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/lateNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/purple_200"
                android:textSize="20dp"
                android:text="0"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/absentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@+id/lateNum"
                android:gravity="center"
                android:textColor="@color/purple_200"
                android:textSize="20dp"
                android:text="0"
                android:textStyle="bold"/>
            <!--            <ImageView-->
            <!--                android:layout_width="15dp"-->
            <!--                android:layout_height="15dp"-->
            <!--                android:layout_toRightOf="@+id/lateNum"-->
            <!--                android:gravity="center"-->
            <!--                android:src="@drawable/information"-->
            <!--                />-->
            <!--            <ImageView-->
            <!--                android:layout_width="15dp"-->
            <!--                android:layout_height="15dp"-->
            <!--                android:layout_toRightOf="@+id/absentNum"-->
            <!--                android:gravity="center"-->
            <!--                android:src="@drawable/information"-->
            <!--                />-->
        </RelativeLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:background="@color/black"
            android:stretchColumns="1, 2, 3">

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="3px"
                    android:layout_marginRight="3px"
                    android:layout_marginTop="3px"
                    android:layout_marginBottom="3px"

                    android:background="@color/main_purple"
                    android:gravity="center"
                    android:text="순번"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginRight="3px"
                    android:layout_marginTop="3px"
                    android:layout_marginBottom="3px"
                    android:background="@color/main_purple"
                    android:gravity="center"
                    android:text="날짜"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginRight="3px"
                    android:layout_marginTop="3px"
                    android:layout_marginBottom="3px"
                    android:background="@color/main_purple"
                    android:gravity="center"
                    android:text="출석 여부"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginRight="3px"
                    android:layout_marginTop="3px"
                    android:layout_marginBottom="3px"
                    android:background="@color/main_purple"
                    android:gravity="center"
                    android:text="비고"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>
